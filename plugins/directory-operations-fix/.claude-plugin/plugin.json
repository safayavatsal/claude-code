  "configuration": {
    "retryAttempts": {
      "type": "number",
      "default": 3,
      "description": "Number of retry attempts for failed directory operations"
    },
    "retryDelay": {
      "type": "number",
      "default": 1000,
      "description": "Base delay (ms) between retry attempts"
    },
    "logLevel": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARN", "ERROR"],
      "default": "INFO",
      "description": "Logging level for directory operations"
    }
  }
